<% layout('/layout/layout') -%>
<div class="login register">
  <form method="POST" action="/users/register">
    <input type="text" placeholder="Username" id="username" name="name" pattern=".{1,}" required>
    <input type="text" placeholder="Email" id="username" name="email" pattern=".{1,}" required>  
    <input type="text" placeholder="Phone Number" id="username" name="phone_number"  required maxlength="11" minlength=10>  
    <input type="password" placeholder="password" id="password" name="password" pattern=".{1,}" required>
    <input type="password" placeholder="confirm password" id="password2" name="password2" pattern=".{1,}" required>    
    <input type="submit" value="Register"> 
  </form>
</div>
